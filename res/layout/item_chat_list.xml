<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lavo_background"
    android:gravity="top"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_chat_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/defaultDescription"
        android:src="@drawable/empty_profile" />

    <TextView
        android:id="@+id/txt_chat_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_bubble_green_blue"
        android:maxWidth="200dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_chat_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_bubble_green_blue"
        android:contentDescription="@string/defaultDescription"
        android:maxWidth="200dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_chat_send_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bullet_blue"
            android:textSize="12sp" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bullet_blue"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>