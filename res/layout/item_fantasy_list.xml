<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_fantasy_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/defaultDescription"
        android:maxHeight="150dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_fantasy_logo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_fantasy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp" />

        <TextView
            android:id="@+id/txt_fantasy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp" />

        <TextView
            android:id="@+id/txt_fantasy_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp" />
    </LinearLayout>

</RelativeLayout>