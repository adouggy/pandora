<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_fantasy_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_fantasy_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/defaultDescription"
        android:maxHeight="120dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/img_fantasy_logo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_fantasy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:textColor="#ff888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_fantasy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_fantasy_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:textColor="#ff888888"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>