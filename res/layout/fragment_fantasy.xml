<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bground_splash"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:id="@+id/layout_fantasy_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/img_fantasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/defaultDescription"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/txt_current_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="#88abcdab"
            android:padding="8dp"
            android:textColor="@color/violet"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#88333355"
            android:gravity="center" >

            <me.promenade.pandora.view.PlayButton
                android:id="@+id/btn_play_fantasy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_fantasy_play"
                android:contentDescription="@string/defaultDescription"
                android:maxWidth="30dp" />

            <SeekBar
                android:id="@+id/pb_fantasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_fantasy_time"
                android:layout_toRightOf="@+id/btn_play_fantasy"
                android:max="100"
                android:thumbOffset="0dp"
                android:progressDrawable="@drawable/progress_bar_states"
                android:thumb="@drawable/slider" />

            <TextView
                android:id="@+id/txt_fantasy_time"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="40dp"
                android:minWidth="40dp"
                android:singleLine="true"
                android:text="@string/txt_time" />
        </RelativeLayout>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:weightSum="3" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pause"
                android:contentDescription="@string/defaultDescription"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_1"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_2"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_3"
                android:textColor="#ffffffaa" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_4"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_5"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_6"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_7"
                android:textColor="#ffffffaa" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_8"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_9"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_10"
                android:textColor="#ffffffaa" />

            <Button
                android:id="@+id/btn_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pulse"
                android:contentDescription="@string/defaultDescription"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_11"
                android:textColor="#ffffffaa" />
        </TableRow>
    </TableLayout>

</LinearLayout>