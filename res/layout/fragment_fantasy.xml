<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/img_fantasy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/defaultDescription"
            android:scaleType="fitXY"
            android:src="@drawable/img_rain" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center" >

            <ImageView
                android:id="@+id/btn_play_fan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:contentDescription="@string/defaultDescription"
                android:maxWidth="30dp"
                android:src="@drawable/btn_fantasy_play" />

            <ProgressBar
                android:id="@+id/pb_play"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="xxx" 
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_fantasy_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>