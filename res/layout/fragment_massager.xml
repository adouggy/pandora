<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_vibrateview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bground_splash" >

    <ListView
        android:id="@+id/list_massager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_massager_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="search" />

        <EditText
            android:id="@+id/edt_bluetooth_input"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btn_bluetooth_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="send" />
    </LinearLayout>

</RelativeLayout>